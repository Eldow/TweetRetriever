<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin = "5dp"
    android:padding = "5dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/image_view_tweet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:background="@color/blue_twitter"
        android:layout_margin="2dp"
        android:padding="2dp"/>
    <Button
        android:id="@+id/button_rt_tweet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/tweet_fragment_retweet"
        android:padding="2dp"
        android:layout_alignBottom="@+id/text_view_content"
        android:layout_alignLeft="@+id/image_view_tweet"
        android:layout_alignStart="@+id/image_view_tweet" />
    <TextView
        android:id="@+id/text_view_username"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/image_view_tweet"
        android:background="@color/blue_twitter"
        android:textColor="@color/white_twitter"
        android:layout_margin="2dp"
        android:padding="2dp"/>
    <TextView
        android:id="@+id/text_view_alias"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_above="@+id/text_view_content"
        android:textColor="@color/white_twitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/text_view_username"
        android:layout_toEndOf="@+id/text_view_username"
        android:background="@color/blue_twitter"
        android:layout_margin="2dp"
        android:padding="2dp"/>
    <TextView
        android:id="@+id/text_view_content"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textColor="@color/white_twitter"
        android:layout_below="@+id/text_view_username"
        android:layout_alignLeft="@+id/text_view_username"
        android:layout_alignStart="@+id/text_view_username"
        android:background="@color/blue_twitter"
        android:padding="2dp"
        android:layout_marginRight="2dp" />
</RelativeLayout>